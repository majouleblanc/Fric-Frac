@model List<BLL.Book>

<h1>Boeken</h1>

<table class="list">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Publisher
            </th>
            <th>
                Edition
            </th>
            <th>
                Comment
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Author
                </td>
                <td>
                    @item.Publisher
                </td>
                <td>
                    @item.Edition
                </td>
                <td>
                    @item.Comment
                </td>
            </tr>
        }
    </tbody>
</table>